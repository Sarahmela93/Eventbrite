<h2>Sign up</h2>

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %> 
    
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Bienvenue!</p>

                <form class="mx-1 mx-md-4">

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.label :email %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "e-mail", class: "form-control", placeholder: "Entrez votre email"%> 
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-3">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.label :password %> <br />    
                      <%= f.password_field :password, autocomplete: "mot de passe", class: "form-control", placeholder: "Entrez votre mot de passe" %> 
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.label :password_confirmation %><br /> 
                        <%= f.password_field :password_confirmation, autocomplete: "mot de passe", class: "form-control", placeholder: "Confirmez votre mot de passe" %> 
                    </div>
                  </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <input
                      class="form-check-input me-2"
                      type="checkbox"
                      value=""
                      id="form2Example3c"
                    />
                    <label class="form-check-label" for="form2Example3">
                     J'accepte toutes les d√©clarations des <a href="#!">conditions d'utilisation</a>
                    </label>
                  </div>

                  
                  <div class="actions"> 
                  <%= f.submit "S'enregistrer", class: "btn btn-primary" %> 
                  </div> 
                  <% end %> 
                <%= render "devise/shared/links" %> 

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png" class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>

<%= render "devise/shared/links" %>